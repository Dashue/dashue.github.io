@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Snow.ViewModels.PostViewModel>
@using System.Collections.Generic
@{
Layout = "default.cshtml";
}
<div class="post">
    <h1 itemprop="name">@Model.Title <div class="kindleWidget" style="display:inline-block;padding:3px;cursor:pointer;font-size:11px;font-family:Arial;white-space:nowrap;line-height:1;">
        <img src="https://d1xnn692s7u6t6.cloudfront.net/white-15.png" />
    </div></h1>
    <div class="meta">
        <span itemprop="author" style="display:none;">Johan Nilsson</span>

        <p class="posted" itemprop="datePublished">@Model.PostDate.ToString("dd MMM yyyy")</p>
        <ul class="categories">
            @foreach(var category in Model.Categories) {
            <li><a href="/category/@category.Url" title="@category">@category.Name</a></li>
            }
        </ul>
    </div>
    <div itemprop="articleBody">
        @Html.RenderSeries()
        @Html.Raw(Model.PostContent)
    </div>
</div>